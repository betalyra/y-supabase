{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es2017", "es7", "es6", "dom"],
    "allowJs": true,
    "declaration": true,
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*", "lib"]
}
